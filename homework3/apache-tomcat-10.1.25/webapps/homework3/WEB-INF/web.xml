<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>ru.homework.servlet.controller.AuthUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.homework.servlet.controller.UserControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>conferenceServlet</servlet-name>
        <servlet-class>ru.homework.servlet.controller.ConferenceController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>conferenceServlet</servlet-name>
        <url-pattern>/api/conference</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>workspaceServlet</servlet-name>
        <servlet-class>ru.homework.servlet.controller.WorkspaceController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>workspaceServlet</servlet-name>
        <url-pattern>/api/workspace</url-pattern>
    </servlet-mapping>
</web-app>
